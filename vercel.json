{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/automate",
      "destination": "/api/automate.py"
    },
    {
      "source": "/api/report",
      "destination": "/api/report.py"
    },
    {
      "source": "/api/trigger",
      "destination": "/api/trigger.py"
    },
    {
      "source": "/api/integrations/crm",
      "destination": "/api/integrations/crm.py"
    },
    {
      "source": "/api/integrations/email",
      "destination": "/api/integrations/email.py"
    },
    {
      "source": "/api/integrations/slack",
      "destination": "/api/integrations/slack.py"
    }
  ]
}

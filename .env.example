# OpenAI API Configuration (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Base URL for OAuth callbacks (production Vercel domain)
NEXT_PUBLIC_BASE_URL=https://pro-sprint-ai.vercel.app

# API Base URL (optional - for split frontend/backend deployments)
# If your backend API is deployed separately (e.g., on Render), set this to the backend URL
# Leave empty or unset to use relative URLs (frontend and API routes on same domain)
# Example: https://your-backend-app.onrender.com
NEXT_PUBLIC_API_BASE_URL=

# CORS Configuration (optional - for production security)
# Comma-separated list of allowed origins for API requests
# If not set, falls back to NEXT_PUBLIC_BASE_URL or allows all origins (*)
# Example: ALLOWED_ORIGINS=https://your-vercel-app.vercel.app,https://custom-domain.com
ALLOWED_ORIGINS=

# Database Configuration (required for persistent token storage)
# PostgreSQL connection string for Render or other providers
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://user:password@hostname:5432/dbname?schema=public

# Token Encryption Key (required for secure token storage)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANT: Keep this secret safe! If lost, all stored tokens will be unrecoverable.
# 
# KEY FORMAT REQUIREMENTS:
# - MUST be exactly 64 hexadecimal characters (0-9, a-f, A-F)
# - MUST be hex format, NOT base64 format
# - Example: a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456
# 
# Use TOKEN_ENCRYPTION_KEY (recommended) or ENCRYPTION_KEY (legacy)
TOKEN_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Integration Credentials (optional - app runs in demo mode without these)
# Configure these for real integration functionality

# HubSpot OAuth2 Integration
# Create an app at https://developers.hubspot.com/
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# Salesforce OAuth2 Integration
# Create a connected app at https://login.salesforce.com/
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_SANDBOX=false

# Google OAuth2 Integration (Drive, Docs, Gmail)
# Create credentials at https://console.cloud.google.com/
# Use the SAME credentials for all Google integrations (Drive, Docs, Gmail)
# REQUIRED for Gmail integration - no demo mode available
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://pro-sprint-ai.vercel.app/api/integrations/email/callback/gmail

# Xero OAuth2 Integration
# Create an app at https://developer.xero.com/
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

# Notion OAuth2 Integration
# Create an integration at https://www.notion.so/my-integrations
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# Asana OAuth2 Integration
# Create an app at https://app.asana.com/0/my-apps
ASANA_CLIENT_ID=
ASANA_CLIENT_SECRET=

# Jira OAuth2 Integration
# Create an app at https://developer.atlassian.com/console/myapps/
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=

# DEPRECATED: Gmail OAuth2 Integration
# NOTE: GMAIL_* variables are deprecated. Use GOOGLE_* variables above for all Google integrations.
# These are kept for backwards compatibility only and will be removed in a future version.
# GMAIL_CLIENT_ID=
# GMAIL_CLIENT_SECRET=

# Microsoft Outlook OAuth2 Integration
# Create an app at https://portal.azure.com/
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Legacy Integrations (deprecated - use OAuth2 versions above)
# Slack Integration
# Get token from https://api.slack.com/apps (Bot User OAuth Token)
SLACK_TOKEN=
SLACK_CHANNEL=#general

# Email/SMTP Configuration
# For Gmail: use App Password (https://support.google.com/accounts/answer/185833)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# DEPRECATED: Gmail API OAuth2 Configuration
# NOTE: These variables are deprecated. Use GOOGLE_* variables at the top of this file instead.
# GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
# GMAIL_CLIENT_SECRET=your-gmail-client-secret
# GMAIL_REDIRECT_URI=https://pro-sprint-ai.vercel.app/api/integrations/email/callback/gmail

# Microsoft Graph API OAuth2 Configuration (optional - for OAuth2 integration)
# Get credentials from https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=https://pro-sprint-ai.vercel.app/api/integrations/email/callback/microsoft

# CRM Configuration
# Configure based on your CRM provider (Salesforce, HubSpot, etc.)
CRM_API_KEY=
CRM_API_URL=https://api.yourcrm.com/v1

# Log Level (INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO

# OpenAI API Configuration (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Integration Credentials (optional - app runs in demo mode without these)
# Configure these for real integration functionality

# Slack Integration
# Get token from https://api.slack.com/apps (Bot User OAuth Token)
SLACK_TOKEN=
SLACK_CHANNEL=#general

# Email/SMTP Configuration
# For Gmail: use App Password (https://support.google.com/accounts/answer/185833)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Gmail API OAuth2 Configuration (optional - for OAuth2 integration)
# Get credentials from https://console.cloud.google.com/
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/integrations/email/callback/gmail

# Microsoft Graph API OAuth2 Configuration (optional - for OAuth2 integration)
# Get credentials from https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/integrations/email/callback/microsoft

# CRM Configuration
# Configure based on your CRM provider (Salesforce, HubSpot, etc.)
CRM_API_KEY=
CRM_API_URL=https://api.yourcrm.com/v1

# Log Level (INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO

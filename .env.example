# OpenAI API Configuration (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Base URL for OAuth callbacks (set to your deployment URL in production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Integration Credentials (optional - app runs in demo mode without these)
# Configure these for real integration functionality

# HubSpot OAuth2 Integration
# Create an app at https://developers.hubspot.com/
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# Salesforce OAuth2 Integration
# Create a connected app at https://login.salesforce.com/
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_SANDBOX=false

# Google Drive/Docs OAuth2 Integration
# Create credentials at https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Xero OAuth2 Integration
# Create an app at https://developer.xero.com/
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

# Notion OAuth2 Integration
# Create an integration at https://www.notion.so/my-integrations
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# Asana OAuth2 Integration
# Create an app at https://app.asana.com/0/my-apps
ASANA_CLIENT_ID=
ASANA_CLIENT_SECRET=

# Jira OAuth2 Integration
# Create an app at https://developer.atlassian.com/console/myapps/
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=

# Gmail OAuth2 Integration
# Use the same Google credentials as Google Drive
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# Microsoft Outlook OAuth2 Integration
# Create an app at https://portal.azure.com/
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Legacy Integrations (deprecated - use OAuth2 versions above)
# Slack Integration
# Get token from https://api.slack.com/apps (Bot User OAuth Token)
SLACK_TOKEN=
SLACK_CHANNEL=#general

# Email/SMTP Configuration
# For Gmail: use App Password (https://support.google.com/accounts/answer/185833)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Gmail API OAuth2 Configuration (optional - for OAuth2 integration)
# Get credentials from https://console.cloud.google.com/
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/integrations/email/callback/gmail

# Microsoft Graph API OAuth2 Configuration (optional - for OAuth2 integration)
# Get credentials from https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/integrations/email/callback/microsoft

# CRM Configuration
# Configure based on your CRM provider (Salesforce, HubSpot, etc.)
CRM_API_KEY=
CRM_API_URL=https://api.yourcrm.com/v1

# Log Level (INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO
